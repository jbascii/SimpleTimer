<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnduration" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:textSize="50dp" android:width="200dp" android:background="#009600"
            android:minHeight="70dp" android:textColor="#ffffff" android:text="" android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="minutes"
            android:id="@+id/tvMinsLabel" android:layout_below="@+id/btnduration" android:layout_centerHorizontal="true"/>
</RelativeLayout>